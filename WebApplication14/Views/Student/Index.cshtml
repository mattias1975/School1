@model IEnumerable<Student>

@{
    ViewData["Title"] = "Student";
}

<h2>Create student</h2>

<div class="row">
    <div class="col-12">

        <div class="col-12">
            <input type="text" id="name" name="Name" placeholder="Name" required />
            <input type="text" id="email" name="Email" class="bg-white text-dark" placeholder="Email" required />

            <button class="btn btn-success btn-sm m-1" onclick="CreateStudent('@Url.Action("Create","Student")')">Add student</button>

        </div>


        <div id="studentlist">

            @foreach (var item in Model)
            {
                <partial name="_Student" model="item" />
            }


        </div>
    </div>
</div>