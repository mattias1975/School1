@model List<Student>
@{
    ViewData["Title"] = "Index";
}

<h2>Create student</h2>


                   <div class="col-12">
                   
                   </div>
                   <div class="row">

                       <div class="col-4"><input type="text" id="name" name="Name" class="bg-white text-dark " placeholder="Name" required /></div>
                       <div class="col-3"><input type="text" id="course" name="CourseName" class="bg-white text-dark" placeholder=" CourseName" required /></div>
                       <div class="col-3"><input type="text" id="email" name="Email" class="bg-white text-dark" placeholder="Email" required /></div>
                      
                       <button class="btn btn-success btn-sm" onclick="CreateItem('@Url.Action("Create","Student")')">Save</button>
                       <div class="col-2"></div>
                   </div>


<div id="studentlist">
    @foreach (var item in Model)
    {

        <partial name="_Student" model="item" />

    }



    
</div>
