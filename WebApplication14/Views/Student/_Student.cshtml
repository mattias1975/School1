@model Student


<div class="row" id="@("Student" + Model.Id)">

    <div class="col-3">@Model.Name</div>
    <div class="col-3">@Model.Email</div>
    <div class="col-3">
        <button class="btn btn-success btn-sm m-1"
                onclick="EditListItem('@("Student" + Model.Id)','@Url.Action("Edit","Student",new { id = Model.Id })')">
            Edit
        </button>
        <span onclick="return confirm('Are you sure you will delete Student?')">


            <button class="btn btn-danger btn-sm m-1"
                    onclick="DeleteItem('@("Student" + Model.Id)','@Url.Action("Delete","Student",new { id = Model.Id })')">
                Delete
            </button>

        </span>
    </div>

    <br>
</div>