@model Course


<div class="row" ID="@("Course" + Model.Id)">
    <div class="col-12">


        <div class="row">

            <div class="col-4" style="background-color:#d1c8c1">@Model.CourseName </div>
          <div style="background-color:#d1c8c1"><br/></div>  
             
            <div class="col-4" style="background-color:#d1c8c1" t>@Model.Assigment</div>


            <div class="col-4" style="background-color:#d1c8c1">

                <button class="btn btn-success btn-sm m-1"
                        onclick="EditCourse('@("Course" + Model.Id)','@Url.Action("Edit","Course",new { id = Model.Id })')">
                    Edit
                </button>

                <button class="btn btn-danger btn-sm m-1"
                        onclick="DeleteStudentFromCourse('@("Course" + Model.Id)','@Url.Action("DeleteStudentFromCourse","Course",new { id = Model.Id })')">
                    Delete
                </button>

                <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark btn-sm m-1">Details</a>

                </div>
            </div>
     </div>
</div>