@model Course



<div class="row" id="@("Course" + Model.Id)">

    <div class="col-3" style="background-color:#d1c8c1">@Model.CourseName</div>

    <div class="col-3" style="background-color:#d1c8c1">@Model.Assigment</div>

    <div class="col-3" style="background-color:#d1c8c1">
        <button class="btn btn-success btn-sm m-1"
                onclick="EditCourse('@("Course" + Model.Id)','@Url.Action("Edit","Course",new { id = Model.Id })')">
            Edit
        </button>
    </div>
    <div class="col-3" style="background-color:#d1c8c1">
        <button class="btn btn-danger btn-sm m-1"
                onclick="Delete('@("Course" + Model.Id)','@Url.Action("Delete","Course",new { id = Model.Id })')">
            Delete
        </button>


    </div>

</div>



