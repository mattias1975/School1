@model CourseStudent


<div  class="row" id="@("Student" + Model.Course.Id)">

    <div class="col-5" style="background-color:gold">@Model.student.Name</div>
  
    <div class="col-3" style="background-color:darkcyan">
     

        <button class="btn btn-danger btn-sm m-1"
                onclick="DeleteStudentFromCourse('@Model.Course.Id','@Model.student.Id','@Url.Action("DeleteStudentFromCourse","Course")')">
            Delete
        </button>


    </div>
    

</div>