@model Course
@{
    ViewData["Title"] = "Details";
}
<h1>Course Details</h1>

    <div class="row">
            <div class="col-3">@Model.CourseName</div>
            <div class="col-3">@Model.Assigment</div>
    </div>
<h2>Teacher</h2>

    @{ if (Model.Teacher != null)
        {


            <div class="col-3">@Model.Teacher.Name</div>
            <div class="col-3">@Model.Teacher.Email</div>


            <a asp-controller="Course" asp-action="AddTeacherToCourse" asp-route-id="@Model.Id" class="btn btn-info btn-sm m-1">Change Teacher</a>
        }

        else
        {
            <div class="-3"><h3>No Teachear in this Course yet</h3></div>
        }
      
    }

 


